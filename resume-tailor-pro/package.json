{
  "name": "resume-tailor-pro",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "dev:extension": "npm-watch",
"build": "next build && mv out/_next out/next && sed -i '' -e 's/_next\//.\/next\//g' out/**/*.html && mv out/index.html ../extension && rsync -va --delete-after out/next/ ../extension/next-assets/ && rm -rf out && rsync -va --delete-after public/next-assets/ ../extension/next-assets/",
        "start": "next start",
        "lint": "next lint",
        "build:extension": "next build && next export && npm run lint:build",
        "lint:build": "mv out/_next out/assets && gsed -i 's/\\/_next/\\/assets/g' out/**.html",
        "package": "npm run build:extension && zip -r packages/$(date -u +\"%Y-%m-%dT%H:%M:%SZ\").zip out"
    },
    "dependencies": {
       "react": "^18",
    "react-dom": "^18",
    "next": "14.0.4",
        "@emotion/react": "^11.10.5",
        "@extractus/article-extractor": "^7.2.8-rc1",
        "@next/font": "13.1.1",
        "@theme-ui/presets": "^0.15.4",
        "@types/node": "18.11.18",
        "@types/react": "18.0.26",
        "@types/react-dom": "18.0.10",
        "@upstash/redis": "^1.19.3",
        "eslint": "8.31.0",
        "eslint-config-next": "13.1.1",
        "next-plausible": "^3.7.2",
        "openai": "^3.1.0",
        "react-query": "^3.39.2",
        "string-strip-html": "^13.0.6",
        "theme-ui": "^0.15.4",
        "typescript": "4.9.4"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.212",
        "npm-watch": "^0.11.0"
    },
    "watch": {
        "build:extension": {
            "patterns": [
                ".",
                "styles/**",
                "pages/**",
                "public/**"
            ],
            "ignore": [
                "out",
                "node_moduels",
                ".next"
            ],
            "extensions": [
                "js",
                "json",
                "lock",
                "tsx",
                "ts"
            ]
        }
    }
}
